
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String 
  email String @unique
  phone_no String
  address String?
  password String 
  // orders Order[]
}

model Product{
  id Int @id @default(autoincrement())
  name String
  description String
  catageory String
  price Float
  orignalPrice Float? @default(100)
  quantity String? @default("1 Pcs")
  discount Float? @default(1000)
  img String?
  // orderItems OrderItem[]
  // cartItems CartItem[] 
}

model Order{
 id Int @id @default(autoincrement())
 userId Int
}

model OrderItem{
  id Int @id @default(autoincrement())
  orderId Int
  profuctId Int
}

model Cart{
  id Int @id @default(autoincrement())
  userId Int @unique
}

model CartItem{
  id Int @id @default(autoincrement())
  cartId Int 
}